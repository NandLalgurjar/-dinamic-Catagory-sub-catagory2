<body>
    <!-- Vertical Form -->
    <form class="row g-3" action="/add_category" method="post" enctype="multipart/form-data">
        {{#each update_data }}
        <div class="col-12">
            <label for="inputNanme4" class="form-label">parent Name</label>
            <select name="parent_Name" id="">
                <option value="">{{this.parent_Name}}</option>
                <option value="">null</option>
