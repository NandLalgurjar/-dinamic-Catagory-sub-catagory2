        </div>

        <div class="col-12">
            {{!-- <label for="inputNanme4" class="form-label">parent Name</label> --}}
            <input type="hidden"  name="id" value={{this._id}}>
        </div>
        <div class="col-12">
            <label for="" class="form-label">Name</label>
            <input type="text"  name="Name" value={{this.Name}} >
        </div>
        <div class="col-12">
            <label for="inputPassword4" class="form-label">Iamge</label>
            <input type="file" name="file" value={{this.image}} class="form-control" id="inputPassword4">
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Submit</button>
